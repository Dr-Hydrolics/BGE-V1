<html><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8"></head><body><pre style="word-wrap: break-word; white-space: pre-wrap;">#version 330 core
 
uniform sampler2D myTextureSampler;

in vec4 colour;

void main(void) 
{
	gl_FragColor = texture2D(myTextureSampler, gl_PointCoord) * colour;
	//gl_FragColor = colour;
